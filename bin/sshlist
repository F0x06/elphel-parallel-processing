[ -n "$DEBUG" ] && set -x

usage() {
  echo "usage: $(basename $0) <sshloginfile>"
  echo
  exit $1
}

[ "$1" = "-h" -o "$1" = "--help" ] && usage 0
[ $# -gt 1 ] && usage 1

SSHLOGINFILE=$1
[ -z "$SSHLOGINFILE" ] && SSHLOGINFILE=~/.parallel/sshloginfile

sed -r -n -e '/^#/b' -e 's/([a-z][-_a-z0-9]+@[a-z0-9][-.a-z0-9]+).*/---\1/' -e 's/.*---//p' $SSHLOGINFILE
